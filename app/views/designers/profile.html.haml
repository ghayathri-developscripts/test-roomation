.block
  .secondary-navigation
    -if current_admin
      %ul.wat-cf
        %li.first= link_to "#{t("web-app-theme.list", :default => "Main")}", "/admins"         
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.designer.email", :default => t("activerecord.labels.email", :default => "Email"))
          \:
        = @designer.email
      
      %p
        %b
          = t("activerecord.attributes.designer.reset_password_sent_at", :default => t("activerecord.labels.reset_password_sent_at", :default => "Reset password sent at"))
          \:
        = @designer.reset_password_sent_at.format_to :civil rescue nil
      %p
        %b
          = t("activerecord.attributes.designer.remember_created_at", :default => t("activerecord.labels.remember_created_at", :default => "Remember created at"))
          \:
        = @designer.remember_created_at.format_to :civil rescue nil
      %p
        %b
          = t("activerecord.attributes.designer.sign_in_count", :default => t("activerecord.labels.sign_in_count", :default => "Sign in count"))
          \:
        = @designer.sign_in_count
      %p
        %b
          = t("activerecord.attributes.designer.current_sign_in_at", :default => t("activerecord.labels.current_sign_in_at", :default => "Current sign in at"))
          \:
        = @designer.current_sign_in_at.format_to :civil rescue nil
      %p
        %b
          = t("activerecord.attributes.designer.last_sign_in_at", :default => t("activerecord.labels.last_sign_in_at", :default => "Last sign in at"))
          \:
        = @designer.last_sign_in_at.format_to :civil rescue nil
      %p
        %b
          = t("activerecord.attributes.designer.current_sign_in_ip", :default => t("activerecord.labels.current_sign_in_ip", :default => "Current sign in ip"))
          \:
        = @designer.current_sign_in_ip
      %p
        %b
          = t("activerecord.attributes.designer.last_sign_in_ip", :default => t("activerecord.labels.last_sign_in_ip", :default => "Last sign in ip"))
          \:
        = @designer.last_sign_in_ip
      %p
        %b
          = t("activerecord.attributes.designer.first_name", :default => t("activerecord.labels.first_name", :default => "First name"))
          \:
        = @designer.first_name
      %p
        %b
          = t("activerecord.attributes.designer.last_name", :default => t("activerecord.labels.last_name", :default => "Last name"))
          \:
        = @designer.last_name
      %p
        %b
          = t("activerecord.attributes.designer.phone", :default => t("activerecord.labels.phone", :default => "Phone"))
          \:
        = @designer.phone
      .wat-cf
        =# link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_designer_path(@designer), :class => "button"
        =# link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), designer_path(@designer), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'admins/sidebar')
